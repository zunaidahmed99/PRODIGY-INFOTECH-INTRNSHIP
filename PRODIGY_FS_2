            },
            {
                id: 7,
                name: "Hand-woven Saree",
                description: "Beautiful hand-woven cotton saree with traditional Bengali patterns.",
                price: 2500,
                category: "Clothing",
                image: "🥻",
                rating: 4.8,
                reviews: [
                    { name: "Sunita Roy", date: "2024-01-22", rating: 5, text: "Beautiful design and excellent quality!" }
                ]
            },
            {
                id: 8,
                name: "Terrace Garden Kit",
                description: "Complete kit for terrace gardening with seeds, pots, and fertilizer.",
                price: 799,
                category: "Home & Garden",
                image: "🌱",
                rating: 4.4,
                reviews: []
            }
        ];

        let cart = [];
        let filteredProducts = [...products];

        // Initialize the page
        function init() {
            displayProducts(products);
            updateCartCount();
        }

        // Display products
        function displayProducts(productsToShow) {
            const grid = document.getElementById('productsGrid');
            grid.innerHTML = '';

            productsToShow.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-image">${product.image}</div>
                    <div class="product-info">
                        <div class="product-name">${product.name}</div>
                        <div class="product-description">${product.description}</div>
                        <div class="product-price">₹${product.price}</div>
                        <div class="product-rating">
                            <span class="stars">${'★'.repeat(Math.floor(product.rating))}${'☆'.repeat(5-Math.floor(product.rating))}</span>
                            <span class="rating-text">${product.rating} (${product.reviews.length} reviews)</span>
                        </div>
                        <button class="add-to-cart" onclick="addToCart(${product.id})">Add to Cart</button>
                        ${product.reviews.length > 0 ? `
                            <div class="reviews-section">
                                <h4>Recent Reviews:</h4>
                                ${product.reviews.slice(0, 2).map(review => `
                                    <div class="review">
                                        <div class="review-header">
                                            <span class="reviewer-name">${review.name}</span>
                                            <span class="review-date">${review.date}</span>
                                        </div>
                                        <div class="stars">${'★'.repeat(review.rating)}${'☆'.repeat(5-review.rating)}</div>
                                        <p>${review.text}</p>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}
                    </div>
                `;
                grid.appendChild(productCard);
            });
        }

        // Search products
        function searchProducts() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            filteredProducts = products.filter(product =>
                product.name.toLowerCase().includes(searchTerm) ||
                product.description.toLowerCase().includes(searchTerm)
            );
            applyFiltersAndSort();
        }

        // Filter products by category
        function filterProducts() {
            const category = document.getElementById('categoryFilter').value;
            if (category) {
                filteredProducts = filteredProducts.filter(product => product.category === category);
            }
            applyFiltersAndSort();
        }

        // Sort products
        function sortProducts() {
            const sortType = document.getElementById('sortFilter').value;
            switch (sortType) {
                case 'name':
                    filteredProducts.sort((a, b) => a.name.localeCompare(b.name));
                    break;
                case 'price-low':
                    filteredProducts.sort((a, b) => a.price - b.price);
                    break;
                case 'price-high':
                    filteredProducts.sort((a, b) => b.price - a.price);
                    break;
                case 'rating':
                    filteredProducts.sort((a, b) => b.rating - a.rating);
                    break;
            }
            displayProducts(filteredProducts);
        }

        // Apply all filters and sorting
        function applyFiltersAndSort() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const category = document.getElementById('categoryFilter').value;
            
            filteredProducts = products.filter(product => {
                const matchesSearch = product.name.toLowerCase().includes(searchTerm) ||
                                    product.description.toLowerCase().includes(searchTerm);
                const matchesCategory = !category || product.category === category;
                return matchesSearch && matchesCategory;
            });
            
            sortProducts();
        }

        // Add to cart
        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            const existingItem = cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({ ...product, quantity: 1 });
            }
            
            updateCartDisplay();
            updateCartCount();
            
            // Show feedback
            const button = event.target;
            const originalText = button.textContent;
            button.textContent = 'Added!';
            button.style.background = '#2ed573';
            setTimeout(() => {
                button.textContent = originalText;
                button.style.background = '';
            }, 1000);
        }

        // Update cart display
        function updateCartDisplay() {
            const cartContent = document.getElementById('cartContent');
            
            if (cart.length === 0) {
                cartContent.innerHTML = '<p>Your cart is empty</p>';
                return;
            }
            
            const cartItems = cart.map(item => `
                <div class="cart-item">
                    <div class="cart-item-image">${item.image}</div>
                    <div class="cart-item-details">
                        <div class="cart-item-name">${item.name}</div>
                        <div class="cart-item-price">₹${item.price}</div>
                        <div class="quantity-controls">
                            <button class="quantity-btn" onclick="updateQuantity(${item.id}, -1)">-</button>
                            <span>${item.quantity}</span>
                            <button class="quantity-btn" onclick="updateQuantity(${item.id}, 1)">+</button>
                            <button class="quantity-btn" onclick="removeFromCart(${item.id})" style="margin-left: 1rem; background: #ff4757; color: white;">×</button>
                        </div>
                    </div>
                </div>
            `).join('');
            
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            
            cartContent.innerHTML = `
                ${cartItems}
                <div class="cart-total">
                    <h3>Total: ₹${total}</h3>
                    <button class="checkout-btn" onclick="checkout()">Proceed to Checkout</button>
                </div>
            `;
        }

        // Update quantity
        function updateQuantity(productId, change) {
            const item = cart.find(item => item.id === productId);
            if (item) {
                item.quantity += change;
                if (item.quantity <= 0) {
                    removeFromCart(productId);
                } else {
                    updateCartDisplay();
                    updateCartCount();
                }
            }
        }

        // Remove from cart
        function removeFromCart(productId) {
            cart = cart.filter(item => item.id !== productId);
            updateCartDisplay();
            updateCartCount();
        }

        // Checkout
        function checkout() {
            if (cart.length === 0) {
                alert('Your cart is empty!');
                return;
            }
            
            // Generate order number
            const orderNumber = 'BG' + Date.now().toString().slice(-6);
            
            // Show order confirmation
            document.getElementById('orderNumberDisplay').textContent = `Order #${orderNumber}`;
            document.getElementById('orderModal').style.display = 'block';
            
            // Clear cart
            cart = [];
            updateCartDisplay();
            updateCartCount();
            toggleCart();
        }

        // Close order modal
        function closeOrderModal() {
            document.getElementById('orderModal').style.display = 'none';
        }

        // Track order
        function trackOrder() {
            const orderNumber = document.getElementById('orderNumber').value.trim();
            if (!orderNumber) {
                alert('Please enter an order number');
                return;
            }
            
            // Show tracking result (mock data)
            document.getElementById('trackingResult').classList.remove('hidden');
            
            // Simulate different order statuses
            const steps = document.querySelectorAll('.step-circle');
            const orderAge = Math.random();
            
            steps.forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index < Math.floor(orderAge * 4) + 1) {
                    step.classList.add('completed');
                } else if (index === Math.floor(orderAge * 4) + 1) {
                    step.classList.add('active');
                }
            });
        }

        // Customer support
        function openSupport(type) {
            switch (type) {
                case 'chat':
                    alert('Live chat feature will be available soon! For now, please call us at +91-98765-43210');
                    break;
                case 'email':
                    window.open('mailto:support@bengalbazaar.com?subject=Customer Support Request');
                    break;
                case 'phone':
                    alert('Please call us at: +91-98765-43210\nAvailable: Mon-Sat, 9 AM - 8 PM');
                    break;
                case 'faq':
                    alert('FAQ Section:\n\n1. How do I track my order?\n   - Use the Track Order section with your order number\n\n2. What are the delivery charges?\n   - Free delivery on orders above ₹500\n\n3. How long does delivery take?\n   - 2-3 business days for local delivery\n\n4. Can I return products?\n   - Yes, 7-day return policy available');
                    break;
            }
        }

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Close cart when clicking outside
        document.addEventListener('click', function(event) {
            const cartSidebar = document.getElementById('cartSidebar');
            const cartIcon = document.querySelector('.cart-icon');
            
            if (!cartSidebar.contains(event.target) && !cartIcon.contains(event.target)) {
                cartSidebar.classList.remove('open');
            }
        });

        // Close modal when clicking outside
        document.getElementById('orderModal').addEventListener('click', function(event) {
            if (event.target === this) {
                closeOrderModal();
            }
        });

        // Add some sample orders for demo
        const sampleOrders = {
            'BG123456': { status: 'processing', items: ['Fresh Basmati Rice', 'Mustard Oil'] },
            'BG789012': { status: 'shipped', items: ['Cotton Kurta Set', 'LED Table Lamp'] },
            'BG345678': { status: 'delivered', items: ['Wireless Headphones'] }
        };

        // Enhanced order tracking
        function trackOrder() {
            const orderNumber = document.getElementById('orderNumber').value.trim().toUpperCase();
            if (!orderNumber) {
                alert('Please enter an order number');
                return;
            }
            
            const trackingResult = document.getElementById('trackingResult');
            const steps = document.querySelectorAll('.step-circle');
            
            // Check if it's a sample order
            if (sampleOrders[orderNumber]) {
                const order = sampleOrders[orderNumber];
                trackingResult.classList.remove('hidden');
                
                // Reset all steps
                steps.forEach(step => {
                    step.classList.remove('active', 'completed');
                });
                
                // Set status based on order data
                switch (order.status) {
                    case 'processing':
                        steps[0].classList.add('completed');
                        steps[1].classList.add('active');
                        break;
                    case 'shipped':
                        steps[0].classList.add('completed');
                        steps[1].classList.add('completed');
                        steps[2].classList.add('active');
                        break;
                    case 'delivered':
                        steps.forEach(step => step.classList.add('completed'));
                        break;
                }
            } else {
                // For demo purposes, show a random status
                trackingResult.classList.remove('hidden');
                const randomStatus = Math.floor(Math.random() * 4);
                
                steps.forEach((step, index) => {
                    step.classList.remove('active', 'completed');
                    if (index < randomStatus) {
                        step.classList.add('completed');
                    } else if (index === randomStatus) {
                        step.classList.add('active');
                    }
                });
            }
        }

        // Add keyboard support
        document.addEventListener('keydown', function(event) {
            // ESC key closes cart and modal
            if (event.key === 'Escape') {
                document.getElementById('cartSidebar').classList.remove('open');
                document.getElementById('orderModal').style.display = 'none';
            }
            
            // Enter key in search
            if (event.key === 'Enter' && event.target.id === 'searchInput') {
                searchProducts();
            }
            
            // Enter key in order tracking
            if (event.key === 'Enter' && event.target.id === 'orderNumber') {
                trackOrder();
            }
        });

        // Add loading animation for products
        function showLoadingAnimation() {
            const grid = document.getElementById('productsGrid');
            grid.innerHTML = '<div style="text-align: center; padding: 2rem; color: #667eea;">Loading products...</div>';
        }

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            init();
            
            // Add some entrance animations
            setTimeout(() => {
                document.querySelectorAll('.product-card').forEach((card, index) => {
                    card.style.animationDelay = (index * 0.1) + 's';
                });
            }, 100);
        });

        // Service Worker registration for PWA capabilities (optional)
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', function() {
                // This would register a service worker in a real application
                console.log('PWA capabilities available');
            });
        }
    </script>
</body>
</html> count
        function updateCartCount() {
            const count = cart.reduce((total, item) => total + item.quantity, 0);
            document.getElementById('cartCount').textContent = count;
        }

        // Toggle cart sidebar
        function toggleCart() {
            const sidebar = document.getElementById('cartSidebar');
            sidebar.classList.toggle('open');
            updateCartDisplay();
        }

        // Update cart
